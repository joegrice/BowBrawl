{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "es2015",
        "noEmitOnError": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "inlineSources": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5",
        "outDir": "public/dist"
    },
    "exclude": [
        "node_modules",
        "*.spec.ts"
    ]
}